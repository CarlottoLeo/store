<%- model_class = Person -%>
<div class="col-md-offset-2 col-md-8">
  <div class="page-header">
    <h1><%= t 'page.headers.people' %></h1>
  </div>

  <%= search_form_for @q do |f| -%>
    <div class="form-group form-inline">
      <%= f.search_field :name_or_cpf_cont, class: "form-control", placeholder: "Search by Client or CPF" -%>
      <%= f.submit class: "btn btn-default" -%>
    </div>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th width="20%"><%= model_class.human_attribute_name(:name) %></th>
        <th width="20%"><%= model_class.human_attribute_name(:cpf) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
  </table>
  <div style="overflow: auto; overflow-x: hidden; max-height: 200px; height: 200px;">
    <table class="table">
      <tbody>
        <% @people.each do |person| %>
          <tr>
            <td width="20%"><%= person.name %></td>
            <td width="20%"><%= person.cpf_formatted %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_person_path(person), :class => 'btn btn-warning btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          person_path(person),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_person_path,
              :class => 'btn btn-primary' %>
</div>
