<%= search_form_for @q do |f| -%>
  <div class="form-group form-inline">
    <%= f.search_field :name_cont, placeholder: "Search", class: "form-control" -%>
    <%= f.submit class: "btn btn-default" -%>
  </div>

  <table class="table table-striped table-hover">
    <thead class="inverted black">
      <tr>
        <th><%= t('table.headers.name') -%></th>
        <th><%= t('table.headers.value') -%></th>
        <th><%= t('table.headers.options') -%></th>
      </tr>
    </thead>

    <tbody>
      <% products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= convert_number_to_money product.value %></td>
          <td>
            <%= link_to t('page.controllers.show'), product_path(product), class: "btn btn-default" %>
            <%= link_to t('page.controllers.edit'), edit_product_path(product), class: "btn btn-warning" %>
            <%= link_to t('page.controllers.destroy'), product_path(product), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end -%>
