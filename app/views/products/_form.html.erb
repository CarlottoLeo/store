<% if @product.errors.any? %>
  <div class="alert alert-danger">
    <h4 class="ui header"><%= t('messages.error.header') %></h4>

    <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @product do |f| %>
  <div class="form-field">
    <%= f.label        :name, t('table.headers.name') %>
    <%= f.text_field   :name, class: "form-control" %>
  </div>
  <div class="form-field">
    <%= f.label        :value, t('table.headers.value') %>
    <%= f.number_field :value, :step => "0.10", class: "form-control" %>
  </div>

  <div class="form-field" style="margin-top: 10px">
    <%= f.submit class: "btn btn-primary" -%>

    <% if @product.created_at %>
      <%= link_to t('page.controllers.show'), product_path(@product), class: "btn btn-default" -%>
    <% end %>

    <%= link_to t('page.controllers.back'), root_path, class: "btn btn-default" %>
  </div>
<% end %>
