<div class="col-md-4 col-md-offset-4">
  <% if @product.errors.any? %>
    <div class="alert alert-danger">
      <h1 class="ui header"><%= t('messages.error.header') %></h1>

      <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for @product do |f| %>
    <div class="form-field">
      <%= f.label        :name, t('table.headers.name') %>
      <%= f.text_field   :name, class: "form-control" %>
    </div>
    <div class="form-field">
      <%= f.label        :value, t('table.headers.value') %>
      <%= f.number_field :value, :step => "0.10", :min => "0.01", class: "form-control" %>
    </div>

    <div class="form-field" style="margin-top: 10px">
      <%= f.submit class: "btn btn-primary" -%>

      <% if @product.created_at %>
        <%= link_to t('page.controllers.show'), product_path(@product), class: "btn btn-default" -%>
      <% end %>

      <%= link_to t('page.controllers.back'), root_path, class: "btn btn-default" %>
    </div>
  <% end %>
</div>
