<% form_number = 1 %>

<%= form_for(@order, :html => {id: "order-form", class: "ui form"}) do |f| %>
  <% if @order.errors.any? %>
    <div class="ui red negative message">
      <h2><%= t('messages.errors.header') %></h2>
      <% @order.errors.each do |msg| %>
        <li>
          <%= msg %>
        </li>
      <% end %>
    </div>
  <% end %>

  <%= render partial: 'product_select_form', locals: {id: form_number} %>

  <%= f.submit class: "hidden" %>
<% end %>
