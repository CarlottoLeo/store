<h1><%= t('page.headers.new_order') %></h1>

<%= render 'form' %>

<hr>
<form class="ui form">
  <div class="ui four fields">
    <div class="field">
      <label><%= t('messages.notice.totals') %></label>
      <input type='text' id="cart_total" disabled value="0.00">
    </div>
  </div>
</form>
<hr>
<%= render partial: 'layouts/animated_button', locals: {
  name:          t('page.controllers.submit'),
  icon_class:    "send icon",
  clickCallback: "$('#order-submit').submit_order();"
} %>
<%= render partial: 'layouts/animated_button', locals: {
  name:          t('page.controllers.back'),
  icon_class:    "reply icon",
  clickCallback: "window.location.href = '#{orders_path}'"
} %>
