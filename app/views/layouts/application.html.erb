<!DOCTYPE html>
<html>
<head>
  <title>Store</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="ui menu">
    <%= link_to root_path, class: :item do %>
      <i class="home icon big inverted black"></i>
    <% end %>
    <div class="right menu">
      <% if user_signed_in? %>
        <div class="item">
          <li><%= t('page.messages.logged_in_as') %>  <%= current_user.email %></li>
        </div>

        <div class="item">
          <%= link_to destroy_user_session_path, method: :delete do %>
            <div class="ui button">Log Out</div>
          <% end %>
        </div>
      <% else %>
        <div class="item">
          <%= link_to new_registration_path(:user) do %>
            <div class="ui primary button">Sign Up</div>
          <% end %>
        </div>

        <div class="item">
          <%= link_to user_session_path do %>
            <div class="ui button">Log In</div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="ui container">
    <% if flash[:notice] %>
      <div class="ui blue info message">
        <%= notice %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="ui red negative message">
        <%= alert %>
      </div>
    <% end %>

    <div class="ui container segments">
      <div class="ui container segment">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
