<h2><%= t('page.headers.login') %></h2>

<div class="ui basic container">
  <%= form_for(resource, :html => {:id => "signin-form", :class => "ui form"}, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="three fields">
      <div class="ui field">
        <%= f.label          :email, t('page.headers.email') %>
        <%= f.email_field    :email, autofocus: true %>
      </div>
    </div>

    <div class="three fields">
      <div class="ui field">
        <%= f.label          :password, t('page.headers.password')  %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <div class="ui checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label     :remember_me, t('page.headers.remember_me') %>
        </div>
      </div>
    <% end -%>

    <%= f.submit :class => "hidden" %>

    <div class="field">
      <%= render partial: 'layouts/animated_button', locals: {
        name:             t('page.controllers.sign_in'),
        icon_class:       "sign in icon",
        clickCallback:    "$('#signin-form').submit();"
      } %>

      <%= link_to new_registration_path(:user) do %>
        <div class="ui button"><%= t('page.controllers.sign_up') %></div>
      <% end %>
    </div>
  <% end %>
</div>
