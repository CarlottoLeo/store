<div class="col-md-4 col-md-offset-4">
  <h2><%=fa_icon 'sign-in', text: t('page.headers.login') %></h2>
  <%= form_for(resource, :html => {:id => "signin-form"}, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label          :email, t('page.headers.email') %>
      <%= f.email_field    :email, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label          :password, t('page.headers.password')  %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <%= f.label :remember_me do %>
          <%= f.check_box :remember_me %><%= t('page.headers.remember_me') -%>
        <% end %>
      </div>
    <% end -%>
    <%= f.submit t('page.controllers.log_in'), class: "btn btn-primary" -%>
    <%= link_to t('page.controllers.sign_up'), new_registration_path(:user), class: "btn btn-default" -%>
  <% end -%>
</div>
