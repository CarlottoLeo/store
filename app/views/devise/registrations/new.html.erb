<h2>Sign Up</h2>

<%= form_for(resource, :html => {:id => "signup-form", :class => "ui form"}, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="three fields">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>
  </div>
  <div class="three fields">
    <div class="ui field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
  </div>
  <div class="three fields">
    <div class="ui field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>

  <div class="fields">
    <div class="ui field">
      <%= render partial: 'layouts/animated_button', locals: {
        name:          t('page.controllers.create_account'),
        icon_class:    "sign in icon",
        clickCallback: "$('#signup-form').submit();"
      } %>
    </div>

    <%= link_to user_session_path do %>
      <div class="ui button">Log In</div>
    <% end %>
  </div>
<% end %>
