<h2>Sign Up</h2>

<%= form_for(resource, :html => {:id => "signup-form", :class => "ui form"}, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="three fields">
    <div class="field">
      <%= f.label :email, t('page.headers.email') %>
      <%= f.email_field :email, autofocus: true %>
    </div>
  </div>
  <div class="three fields">
    <div class="ui field">
      <%= f.label :password, t('page.headers.password') %>
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
        <em><%= t('messages.notice.min_chars', min: @minimum_password_length) %></em>
      <% end %>
    </div>
  </div>
  <div class="three fields">
    <div class="ui field">
      <%= f.label :password_confirmation, t('page.headers.password_confirmation') %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>

  <%= f.submit :class => "hidden" %>

  <div class="fields">
    <div class="ui field">
      <%= render partial: 'layouts/animated_button', locals: {
        name:          t('page.controllers.create'),
        icon_class:    "sign in icon",
        clickCallback: "$('#signup-form').submit();"
      } %>
    </div>

    <%= link_to user_session_path do %>
      <div class="ui button"><%= t('page.controllers.log_in') %></div>
    <% end %>
  </div>
<% end %>
