<div class="col-md-4 col-md-offset-4">
  <h2>Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-field">
      <%= f.label :email, t('page.headers.email') %>
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-field">
      <%= f.label :password, t('page.headers.password') %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      <% if @minimum_password_length %>
        <p class="help-block"><%= t('messages.notice.min_chars', min: @minimum_password_length) %></p>
      <% end %>
    </div>

    <div class="form-field">
      <%= f.label :password_confirmation, t('page.headers.password_confirmation') %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group" style="margin-top: 10px">
      <%= f.submit class: 'btn btn-primary' -%>
      <%= link_to t('page.controllers.log_in'), user_session_path, class: 'btn btn-default' -%>
    </div>
  <% end %>
</div>
